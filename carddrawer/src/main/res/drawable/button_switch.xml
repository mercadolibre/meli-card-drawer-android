<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/thumb"
        android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <size
                android:width="@dimen/card_drawer_thumb_switch_width_high_res"
                android:height="28dp" />

            <corners android:radius="30dp" />
        </shape>
    </item>

    <item
        android:id="@+id/gradient_thumb"
        android:gravity="center">

        <shape android:shape="rectangle">

            <size
                android:width="@dimen/card_drawer_gradient_thumb_switch_width_high_res"
                android:height="24dp" />

            <corners android:radius="30dp" />

            <gradient
                android:startColor="#e2e2e2"
                android:centerColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="270"/>
        </shape>
    </item>

</layer-list>