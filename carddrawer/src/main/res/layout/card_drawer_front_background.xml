<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="256dp"
    android:layout_height="158dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/cho_card_image_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/card_drawer_background"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/cho_card_image_front_reveal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/card_drawer_background"
        tools:tint="@color/card_drawer_gray_light"/>

    <ImageView
        android:id="@+id/cho_card_gradient_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/card_drawer_gradient" />

    <ImageView
        android:id="@+id/cho_card_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/card_drawer_overlay" />

    <include
        android:id="@+id/cho_am_default_overlay"
        layout="@layout/card_drawer_am_overlay"
        android:layout_gravity="end"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/cho_am_hybrid_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:scaleType="fitEnd"
        android:src="@drawable/card_drawer_hybrid_overlay" />

</FrameLayout>