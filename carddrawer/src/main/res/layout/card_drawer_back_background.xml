<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="256dp"
    android:layout_height="158dp"
    android:layout_gravity="center_horizontal" >

    <ImageView
        android:id="@+id/cho_card_image_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/card_drawer_background"
        tools:tint="#001d77" />

    <ImageView
        android:id="@+id/cho_card_image_back_reveal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/card_drawer_background"
        tools:tint="#001d77" />

    <ImageView
        android:id="@+id/cho_card_gradient_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/card_drawer_gradient" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/card_drawer_overlay"/>

</FrameLayout>